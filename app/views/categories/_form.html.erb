<%= form_for(@category, html: {class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/error_messages', obj: @category %>

  <div class="control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
    <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
  <div class="controls">
  <%= f.submit t('helpers.submit.submit', :model=> Category.model_name.human), class: "btn btn-small btn-primary" %>
  </div>
  </div>
<% end %>

<div class="form-horizontal">
<div class="control-group">
<div class="controls">
<% unless @category.new_record? %>
  <%= button_to "Supprimer", @category, method: :delete, data: { confirm: "Supprimer ?" }, title: @category.name, class: "btn btn-small btn-danger" %>
<% end %>
</div>
</div>
</div>