<%= form_for(@consultant, html: {class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/error_messages', obj: @consultant %>

  <div class="control-group">
    <%= f.label :label, class: "control-label" %>
    <div class="controls">
    <%= f.text_field :label %>
    </div>
  </div>

  <div class="control-group">
  <div class="controls">
  <%= f.submit t('helpers.submit.submit', :model=> Consultant.model_name.human), class: "btn btn-small btn-primary" %>
  </div>
  </div>
<% end %>

<div class="form-horizontal">
<div class="control-group">
<div class="controls">
<% unless @consultant.new_record? %>
  <%= button_to "Supprimer", @consultant, method: :delete, data: { confirm: "Supprimer ?" }, title: @consultant.label, class: "btn btn-small btn-danger" %>
<% end %>
</div>
</div>
</div>