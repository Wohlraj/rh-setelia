<% provide(:title, 'Connexion') %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
  <div class="span4 offset4">
      <div class="input-group">
        <%= f.email_field :email, autofocus: true, placeholder: "e-mail" %>
      </div>

      <div class="input-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "mot de passe" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="input-group">
          <%-# f.check_box :remember_me %>
          <%-# f.label :remember_me, "se souvenir de moi" %>
        </div>
      <% end -%>

      <div><%= f.submit "valider", class: "btn btn-large btn-primary" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>