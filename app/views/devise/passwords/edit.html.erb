<% provide(:title, 'Changement de mot de passe') %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

<div class="row">
  <div class="span6 offset3">

  <div class="control-group">
    <%= f.label :password, "Nouveau mot de passe", class: "control-label"  %>
  <div class="controls">
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
  </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, "Confirmation", class: "control-label"  %>
  <div class="controls">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  </div>

  <div><%= f.submit "Valider", class: "btn btn-small btn-primary" %></div>

<%= render "devise/shared/links" %>
  </div>
</div>

<% end %>