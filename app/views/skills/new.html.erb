<% provide(:title, "Ajout de compétence") %>
<h1><%= yield(:title) %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@skill) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :intitulé %>
		<%= f.text_field :keyword %>

		<%= f.submit "Ajouter", class: "btn btn-small btn-primary" %>
    <% end %>
  </div>
</div>