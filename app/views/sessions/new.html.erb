<% provide(:title, "Connexion") %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :login %>
      <%= f.text_field :login %>

      <%= f.label :"Mot de passe" %>
      <%= f.password_field :password %>

      <%= f.submit "Connexion", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>