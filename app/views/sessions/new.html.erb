<% provide(:title, "Connexion") %>

<div class="container">
  <div class="span4 offset4">
    <%= form_for(:session, url: sessions_path, html: {class: 'form-signin' }) do |f| %>

      <div class="input-group">
      <%= f.text_field :login, class: "input-block-level", placeholder: "login" %>
      </div>

      <div class="input-group">
      <%= f.password_field :password, class: "input-block-level", placeholder: "mot de passe" %>
      </div>

      <div class="input-group">
      <%= f.submit "Connexion", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
