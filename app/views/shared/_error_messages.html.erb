<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <%= t('errors.template.header', :model=> obj.class.model_name.human, :count=> obj.errors.count) %>
    </div>
    <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
